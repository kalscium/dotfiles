layout {
    pane split_direction="vertical" {
        pane {
            pane split_direction="vertical" {
                pane edit="."
                pane
            }
            pane split_direction="vertical" size="32%" {
                pane
            }
        }
        pane size="24%" {
            pane command="eza" {
                args "--color" "always" "--icons=always" "-Tl" "--no-user" "--no-permissions" "--no-time" "--total-size" "--git" "--git-ignore"
            }
            pane command="git" {
                args "log"
            }
        }
    }
}
